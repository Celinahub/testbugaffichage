<!-- SEO Metadata -->
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="keywords" content="{{ tags or 'blog, articles, ' ~ metadata.title | safe }}">
  <meta name="robots" content="index, follow">

  <!-- Open Graph Metadata (Facebook, LinkedIn, Pinterest) -->
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:description" content="{{ description or metadata.description }}">
  <meta property="og:image" content="{{ image or metadata.socialImage | url }}">
  <meta property="og:url" content="{{ page.url | absoluteUrl }}">
  <meta property="og:site_name" content="{{ metadata.title }}">
  <meta property="og:type" content="website">
  <meta name="pinterest-rich-pin" content="true">

  <!-- Twitter Metadata -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or metadata.title }}">
  <meta name="twitter:description" content="{{ description or metadata.description }}">
  <meta name="twitter:image" content="{{ image or metadata.socialImage | url }}">
  <meta name="twitter:site" content="{{ metadata.twitter or '@yourtwitterhandle' }}">

<!-- Lien vers le flux RSS -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} - Flux RSS" href="{{ site.url }}/rss.xml" />

<!-- Theme Color -->
  <meta name="theme-color" content="#F8F9F6">


  <!-- Canonical URL -->
<link rel="canonical" href="{{ page.url | absoluteUrl('https://chubert91assmat.netlify.app') }}">



